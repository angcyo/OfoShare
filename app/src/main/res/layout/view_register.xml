<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/base_xxhdpi"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_100dpi">

        <com.angcyo.uiview.widget.ExEditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="取个名字吧"/>

    </android.support.design.widget.TextInputLayout>

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/text_view"
        style="@style/BaseMainColorButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:layout_below="@id/edit_text_layout"
        android:layout_marginTop="@dimen/base_100dpi"
        android:gravity="center"
        android:text="加入共享家庭"/>
</RelativeLayout>
